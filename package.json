{
    "name": "electron-adapter",
    "version": "1.0.4-next.7",
    "description": "This is a library to build platform (win, linux, mac) executables for a bundled static web application. It is also possible to debug the application with HMR.",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "author": {
        "name": "Peter Placzek",
        "email": "contact@tada5hi.net",
        "url": "https://github.com/tada5hi"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tada5hi/electron-adapter.git"
    },
    "scripts": {
        "build": "rimraf ./dist && tsc",
        "commit": "npx git-cz",
        "lint": "eslint --ext .js,.vue,.ts ./src",
        "lint:fix": "npm run lint -- --fix",
        "prepare": "npx husky install",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "electron",
        "cli",
        "hmr",
        "vue",
        "react",
        "win",
        "mac",
        "linux",
        "web",
        "app",
        "nuxt",
        "next",
        "desktop"
    ],
    "bin": {
        "electron-adapter": "dist/cli/index.js"
    },
    "license": "MIT",
    "dependencies": {
        "chokidar": "^3.5.3",
        "cross-spawn": "^7.0.3",
        "fs-extra": "^10.1.0",
        "glob": "^8.0.3",
        "mustache": "^4.2.0",
        "smob": "^0.0.3",
        "vite": "^3.1.6",
        "yargs": "^17.6.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.1.2",
        "@commitlint/config-angular": "^17.1.0",
        "@commitlint/config-conventional": "^17.1.0",
        "@commitlint/cz-commitlint": "^17.1.2",
        "@semantic-release/changelog": "^6.0.1",
        "@semantic-release/commit-analyzer": "^9.0.2",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^8.0.6",
        "@semantic-release/npm": "^9.0.1",
        "@semantic-release/release-notes-generator": "^10.0.3",
        "@tada5hi/eslint-config-typescript": "^1.0.7",
        "@types/cross-spawn": "^6.0.2",
        "@types/fs-extra": "^9.0.13",
        "@types/glob": "^8.0.0",
        "@types/mustache": "^4.2.1",
        "@types/node": "^18.8.2",
        "@types/yargs": "^17.0.13",
        "coveralls": "^3.1.0",
        "cross-env": "^7.0.3",
        "electron": "^21.1.0",
        "eslint": "^8.24.0",
        "husky": "^8.0.1",
        "rimraf": "^3.0.2",
        "semantic-release": "^19.0.5",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4"
    },
    "peerDependencies": {
        "electron": "16.x || 17.x || 18.x || 19.x || 20.x || 21.x",
        "electron-builder": "22.x || 23.x || 24.x"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    }
}
