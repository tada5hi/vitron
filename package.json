{
    "name": "vitron",
    "version": "1.0.23",
    "description": "This is a library to build beautiful (win, linux, mac) desktop apps for modern web projects with vite and electron.",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "assets"
    ],
    "author": {
        "name": "Peter Placzek",
        "email": "contact@tada5hi.net",
        "url": "https://github.com/tada5hi"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tada5hi/vitron.git"
    },
    "scripts": {
        "build": "rimraf ./dist && tsc",
        "commit": "npx git-cz",
        "lint": "eslint --ext .js,.vue,.ts ./src",
        "lint:fix": "npm run lint -- --fix",
        "prepare": "npx husky install",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "electron",
        "vite",
        "app",
        "desktop",
        "desktop-app",
        "web",
        "win",
        "mac",
        "linux",
        "vue",
        "react",
        "nuxt",
        "next"
    ],
    "bin": {
        "vitron": "dist/cli/index.js"
    },
    "license": "MIT",
    "dependencies": {
        "cross-spawn": "^7.0.3",
        "fs-extra": "^11.1.0",
        "glob": "^8.1.0",
        "locter": "^0.7.1",
        "mustache": "^4.2.0",
        "smob": "^0.1.0",
        "vite": "^4.1.3",
        "yargs": "^17.6.2",
        "zod": "^3.20.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.4.2",
        "@commitlint/config-angular": "^17.4.2",
        "@commitlint/config-conventional": "^17.4.2",
        "@commitlint/cz-commitlint": "^17.4.2",
        "@semantic-release/changelog": "^6.0.2",
        "@semantic-release/commit-analyzer": "^9.0.2",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^8.0.7",
        "@semantic-release/npm": "^9.0.2",
        "@semantic-release/release-notes-generator": "^10.0.3",
        "@tada5hi/eslint-config-typescript": "^1.1.1",
        "@types/cross-spawn": "^6.0.2",
        "@types/fs-extra": "^11.0.1",
        "@types/glob": "^8.0.1",
        "@types/mustache": "^4.2.2",
        "@types/node": "^18.14.0",
        "@types/yargs": "^17.0.22",
        "coveralls": "^3.1.0",
        "cross-env": "^7.0.3",
        "electron": "^22.1.0",
        "eslint": "^8.34.0",
        "husky": "^8.0.3",
        "rimraf": "^4.1.2",
        "semantic-release": "^19.0.5",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    },
    "peerDependencies": {
        "electron": "16.x || 17.x || 18.x || 19.x || 20.x || 21.x || 22.x",
        "electron-builder": "22.x || 23.x || 24.x"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    }
}
